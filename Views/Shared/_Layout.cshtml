

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <script src="~/IQ6/IQ6.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/IQ6/IQ6.css" />
    @RenderSection("Header", false)
</head>
<body>
    @if(Request["msg"] != null)
    {
        <div class="alert alert-info">@Request["msg"]</div>
    }
    <div class="container" style='width:782px;'>
        <img src="/Content/header.jpg" /><br /><br />
        <div class="row">
            <div class="col-sm-12">
                   <h3 class="pull-left" style="margin-top:0px;">Welcome @IQApp.User.GetName()</h3>
                <div class="pull-right">
                    <div class="btn-group">
                        @if (!Request.Url.ToString().Contains("Order"))
                        {
                        <a href="/Portal/AddOrder" class="btn btn-primary">Add New Order</a>
                        }
                        <a href="/IQSecurity/LogOut" class="btn btn-warning">Log Out</a>
                    </div>
                </div>
               <hr style="clear:both"/>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
